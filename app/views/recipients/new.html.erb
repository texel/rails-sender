<h1>New recipient</h1>

<% form_for(@recipient, :url => envelope_recipients_url(@envelope)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :role %><br />
    <%= f.text_field :role %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<hr/>
<p>
  <%= link_to 'Back', account_envelope_url(@envelope.account, @envelope) %>
</p>
