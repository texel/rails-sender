<h1>New recipient</h1>

<% form_for(@recipient, :url => envelope_recipients_url(@envelope)) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'form', :locals => {:f => f} %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<hr/>
<p>
  <%= link_to 'Back', account_envelope_url(@envelope.account, @envelope) %>
</p>
